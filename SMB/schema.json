{
  "$schema": "http://json-schema.org/schema#",
  "id": "https://github.com/sprukkiemaster/SmartDataModel/main/SMB/schema.json",
  "title": "SMB / FIWARE - ModuleStatus",
  "description": "Represent a status for a physical SMB module.",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "description": "NGSI Entity type"
    },
    "Sensor": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "description": "NGSI Entity type"
        },
        "name": {
          "type": "string",
          "description": "Sensor name"
        },
        "value": {
          "type": "string",
          "description": "Sensor value"
        }
      }
    },
    "Location": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "description": "NGSI Entity type"
        },
        "enterprise": {
          "type": "string",
          "description": "Name of the enterprise"
        },
        "site": {
          "type": "string",
          "description": "Name of the production site"
        },
        "area": {
          "type": "string",
          "description": "Name of the area location on the site"
        },
        "processCell": {
          "type": "string",
          "description": "Name of the processcell"
        },
        "unit": {
          "type": "string",
          "description": "Name of the unit the in the processcell"
        },
        "equipmentModule": {
          "type": "string",
          "description": "Name of the equipmentmodule in the unit"
        },
        "controllModule": {
          "type": "string",
          "description": "Name of the controllmodule in the equipmentmodule"
        },
        "dateIssued": {
          "type": "string",
          "format": "date-time",
          "description": "Sensor name"
        }
      }
    }
  }
}