{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://github.com/ts-exsensio/DataModel/common-schema.json",
  "title": "Common definitions for Harmonized Data Models",
  "definitions": {
    "EntityIdentifierType": {
      "type": "string",
      "pattern": "^urn:ngsi-ld:([A-Za-z]*):([0-9a-z]{8}-[0-9a-z]{4}-[0-9a-z]{4}-[0-9a-z]{4}-[0-9a-z]{12})$"
    },
    "TimeSpan": {
      "type": "string",
      "pattern": "^\\d{2}:\\d{2}:\\d{2}|(?:.\\d{3})$"
    }
  }
}