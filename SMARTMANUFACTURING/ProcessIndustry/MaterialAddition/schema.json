{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$schemaVersion": "0.1.0",
  "$id": "https://smart-data-models.github.io/dataModel.ProcessIndustry/MaterialAddition/schema.json",
  "title": "Smart Data Models - Material addition event schema",
  "description": "Schema for material additions to industrial processes",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://smart-data-models.github.io/data-models/common-schema.json#/definitions/GSMA-Commons"
    },
    {
      "$ref": "https://smart-data-models.github.io/data-models/common-schema.json#/definitions/Location-Commons"
    },
    {
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "MaterialAddition"
          ],
          "description": "Property. NGSI Entity type. It has to be MaterialAddition"
        },
        "processName": {
          "type": "string",
          "description": "Property. Name or identifier of the related production process"
        },
        "heatNumber": {
          "type": "number",
          "description": "Property. Related production heat number"
        },
        "addedMaterials": {
          "type": "array",
          "description": "Property. The materials added into the process",
          "items": {
            "type": "object",
            "properties": {
              "code": {
                "type": "string",
                "description": "Property. Material code"
              },
              "mass": {
                "type": "number",
                "description": "Property. Units:'kg'. Mass of material added"
              },
              "category": {
                "type": "string",
                "description": "Property. Material category"
              },
              "chemicalConcentration": {
                "type": "array",
                "description": "Property. The components in the chemical composition of the material",
                "items": {
                  "type": "object",
                  "properties": {
                    "substance": {
                      "type": "string",
                      "description": "Property. Chemical substance name or identifier, preferably the chemical symbol"
                    },
                    "percentage": {
                      "type": "number",
                      "minimum": 0,
                      "maximum": 1,
                      "description": "Property. Percentage of the chemical substance"
                    }
                  },
                  "required": [
                    "substance",
                    "percentage"
                  ]
                }
              },
              "specificEnergy": {
                "type": "number",
                "description": "Property. Units:'kWh/kg'. The specific energy of the material"
              },
              "source": {
                "type": "string",
                "description": "Property. Name or identifier of material source"
              },
              "origin": {
                "type": "string",
                "description": "Property. Name or identifier of material origin"
              },
              "supplier": {
                "type": "string",
                "description": "Property. Name or identifier of material supplier"
              },
              "materialPrice": {
                "type": "number",
                "description": "Property. Units:'1/kg'. Material price per unit of mass in local currency"
              },
              "storageAvailability": {
                "type": "number",
                "description": "Property. Units:'kg'. Current storage availability"
              }
            },
            "required": [
              "code",
              "mass"
            ]
          }
        }
      }
    }
  ],
  "required": [
    "id",
    "type",
    "dateObserved",
    "processName",
    "addedMaterials"
  ]
}
