{
    "$schema": "http://json-schema.org/schema#",
    "$id": "https://smart-data-models.github.io/data-models.OpenChannelManagement/ObservedAsset/schema.json",
    "title": "Open Channel Management - ObservedAsset",
    "description": "This entity contains temporal data made for Open Channel Management (raw-water systems)",
    "type": "object",
    "allOf": [
        {
            "$ref": "https://smart-data-models.github.io/data-models/common-schema.json#/definitions/Location-Commons"
        },
        {
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["ObservedAsset"],
                    "description": "NGSI-LD Entity Type"
                },
                "observedBy": {
                  "type": "String",
                  "description": "Relationship. Model:'https://smart-data-models.github.io/dataModel.Device/device-schema.json'",
                  "format": "uri"
                },
                "monitoredProperty": {
                  "type": "string",
                  "enum": [
                    "Water level",
                    "Gate Opening",
                    "Water flow",
                    "Water temperature",
                    "Average Velocity",
                    "Specific Conductivity",
                    "Turbidity",
                    "Battery supply",
                    "Water velocity"
                  ]
                }
            }
        }
    ],
    "required": [
        "id",
        "monitoredProperty",
        "location",
        "observedAt",
        "observedBy"
    ]
}
