        },
        {
            "properties":{
                "type": {
                    "type": "string",
                    "description": "Property. NGSI entity type. It has to be PolarH10TopicACC",
                    "enum": [
                        "PolarH10TopicACC"
                    ]
                },
                "clientId":{
                    "type":"string",
                    "description":"Client ID"
                },
                "deviceId":{
                    "type":"string",
