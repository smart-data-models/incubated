{
    "$schema": "http://json-schema.org/schema#",
    "$schemaVersion": "0.0.1",
    "modelTags": "INCODE",
    "$id": "https://smart-data-models.github.io/dataModel.Aeronautics/UWB/schema.json",
    "title": "Smart Data Models - UWB",
    "description": "Data model for the Ultra Wide Band (UWB).",
    "type": "object",
    "allOf": [
        {
            "$ref": "https://smart-data-models.github.io/data-models/common-schema.json#/definitions/GSMA-Commons"
        },
        {
            "$ref": "https://smart-data-models.github.io/data-models/common-schema.json#/definitions/Location-Commons"
        },
        {
            "properties": {
                "type": {
                    "type": "string",
                    "description": "Property. NGSI entity type. It has to be Ultra Wide Band (UWB)",
                    "enum": [
                        "UWB"
                    ]
                },
                "version": {
                    "type": "string",
                    "description": "Version of the data."
                },
                "tagId": {
                    "type": "string",
                    "description": "Tag ID."
                },
                "timestamp": {
                    "type": "number",
                    "description": "Timestamp of the data."
                },
                "success": {
                    "type": "boolean",
                    "description": "Success status."
                },
                "data": {
                    "type": "object",
                    "properties": {
                        "coordinates": {
                            "type": "object",
                            "description": "Coordinates data.",
                            "properties": {
                                "x": {
                                    "type": "number",
                                    "description": "'x' coordinate."
                                },
                                "y": {
                                    "type": "number",
                                    "description": "'y' coordinate."
                                },
                                "z": {
                                    "type": "number",
                                    "description": "'z' coordinate."
                                }
                            }
                        },
                        "tagData": {
                            "type": "object",
                            "description": "Tag data information.",
                            "properties": {
                                "blinkIndex": {
                                    "type": "number",
                                    "description": "Blink index value."
                                },
                                "accelerometer": {
                                    "type": "array",
                                    "description": "Accelerometer readings.",
                                    "items": {
                                        "type": "array",
                                        "items": [
                                            {
                                                "type": "number",
                                                "description": "X-axis reading"
                                            },
                                            {
                                                "type": "number",
                                                "description": "Y-axis reading"
                                            },
                                            {
                                                "type": "number",
                                                "description": "Z-axis reading"
                                            }
                                        ]
                                    }
                                }
                            }
                        },
                        "anchorData": {
                            "type": "array",
                            "description": "Anchor data information.",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "anchorId": {
                                        "type": "string",
                                        "description": "Anchor ID."
                                    },
                                    "rss": {
                                        "type": "number",
                                        "description": "RSS value."
                                    }
                                }
                            }
                        },
                        "metrics": {
                            "type": "object",
                            "description": "Metrics data.",
                            "properties": {
                                "latency": {
                                    "type": "number",
                                    "description": "Latency value."
                                },
                                "rates": {
                                    "type": "object",
                                    "description": "Rates data.",
                                    "properties": {
                                        "success": {
                                            "type": "number",
                                            "description": "Success rate."
                                        },
                                        "update": {
                                            "type": "number",
                                            "description": "Update rate."
                                        }
                                    }
                                }
                            }
                        },
                        "zones": {
                            "type": "array",
                            "description": "Zones information.",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "string",
                                        "description": "Zone ID."
                                    },
                                    "name": {
                                        "type": "string",
                                        "description": "Zone name."
                                    }
                                }
                            }
                        },
                        "moving": {
                            "type": "boolean",
                            "description": "Moving status."
                        }
                    }
                }
            }
        }
    ],
    "required": [
        "type",
        "version",
        "tagId",
        "timestamp",
        "success",
        "data"
    ]
}
