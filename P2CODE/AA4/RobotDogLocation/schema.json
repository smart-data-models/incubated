{
    "$schema":"http://json-schema.org/schema#",
    "$schemaVersion": "0.0.1",
    "modelTags": ["P2CODE", "ROBOT"],
    "$id":"https://smart-data-models.github.io/dataModel.AutonomousMobileRobot/DogLocation/schema.json",
    "title":"Smart Data Models - RobotDogLocation",
    "description":"A Data Model of tracking the location of a Unmanned Ground Vehicle - UGV e.g robot dog",
    "type":"object",
    "allOf":[
        {
            "$ref":"https://smart-data-models.github.io/data-models/common-schema.json#/definitions/GSMA-Commons"
        },
        {
            "$ref":"https://smart-data-models.github.io/data-models/common-schema.json#/definitions/Location-Commons"
        },
        {
            "properties":{
                "type": {
                    "type": "string",
                    "description": "Property. NGSI entity type. It has to be DogLocation",
                    "enum": [
                        "RobotDogLocation"
                    ]
                },
                "vehicleID":{
                    "type":"string",
                    "description":"Property. Identifier of the vehicle (robot dog)"
                },
                "location":{
                    "type":"object",
                    "description":"Property. Location information",
                    "properties":{
                        "latitude":{
                            "type":"string",
                            "description":"Property. Latitude of the vehicle (robot dog)"
                        },
                        "longitude":{
                            "type":"string",
                            "description":"Property. Longitude of the vehicle (robot dog)"
                        },
                        "time":{
                            "type":"string",
                            "format":"date-time",
                            "description":"Property. Timestamp of the location data"
                        }
                    }
                }
            },
            "required":[
                "type",
                "id"
            ]
        }
    ]
}